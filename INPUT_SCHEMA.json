{
  "title": "Coldwell Banker mailto scraper",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrl": {
      "title": "Start URL",
      "type": "string",
      "editor": "textfield",
      "default": "https://www.coldwellbanker.com/city/fl/jacksonville/agents",
      "description": "First results page to crawl (e.g. the Jacksonville agents page)."
    },
    "city": {
      "title": "City label",
      "type": "string",
      "editor": "textfield",
      "default": "Jacksonville",
      "description": "Stored in CSV CITY column."
    },
    "state": {
      "title": "State label",
      "type": "string",
      "editor": "textfield",
      "default": "FL",
      "description": "Stored in CSV STATE column."
    },
    "maxPages": {
      "title": "Max pages (safety cap)",
      "type": "integer",
      "editor": "number",
      "minimum": 1,
      "default": 999,
      "description": "Stops after this many pages even if more are available."
    },
    "delayMs": {
      "title": "Delay between pages (ms)",
      "type": "integer",
      "editor": "number",
      "minimum": 0,
      "default": 1000,
      "description": "Politeness delay after clicking Next."
    }
  },
  "required": ["startUrl"]
}
